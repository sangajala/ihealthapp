                        </div>*@
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <section id="loginForm">
                                @using (Html.BeginForm("Register_All", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <hr />
                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                    @*<div class="form-group row">
                @Html.LabelFor(m => m.UserName, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                </div>
            </div>*@
                                    @*<div class="form-group row">
                                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-lg-3 col-form-label" })
                                        <div class="col-lg-9">
                                            @Html.DropDownListFor(model => model.Email, new SelectList(Model.UsersList, "Email", "Email"), new { @class = "form-control form-control-select2", @style = "width:100%" })
                                            @Html.ValidationMessageFor(model => model.Email, String.Empty, new { @class = "text-danger" })
                                        </div>
                                    </div>*@

                                    <div class="form-group row">
                                        @Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        @Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label" })
                                        <div class="col-md-9">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 control-label" })
                                        <div class="col-md-9">
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label">Register for :</label>
                                        <div class="col-lg-9">
                                            <div class="form-check form-check-inline">
                                                <label class="form-check-label">
                                                    @Html.RadioButtonFor(m => m.UserRole, 1, new { @class = "form-input-styled" })
                                                    Admin
                                                </label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <label class="form-check-label">
                                                    @Html.RadioButtonFor(m => m.UserRole, 2, new { @class = "form-input-styled" })
                                                    Doctor
                                                </label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <label class="form-check-label">
                                                    @Html.RadioButtonFor(m => m.UserRole, 3, new { @class = "form-input-styled" })
                                                    Patient
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                    @*<div class="form-group">
