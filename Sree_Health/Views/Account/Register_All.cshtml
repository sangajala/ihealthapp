@model Sree_Health.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}
<div class="content">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-5">
            <!-- Form inputs -->
            <div class="card">
                <div class="card-header header-elements-inline">
                    <h3 class="card-title">Register new Admin, Doctor, and Patient</h3>
